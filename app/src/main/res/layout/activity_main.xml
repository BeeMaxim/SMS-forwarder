<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/setter_button"
        android:text="@string/set_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSetterClick"/>

    <Button
        android:id="@+id/name_button"
        android:text="@string/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onNameClick"/>

    <Button
        android:id="@+id/apps_button"
        android:text="@string/notifications_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAppsClick"/>

    <Button
        android:id="@+id/messages_button"
        android:text="@string/messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onMessagesClick"/>

    <TextView
        android:id="@+id/debug"
        android:scrollbars = "vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>